<h1>Books</h1>
<table>
  <thead>
    <tr><th>Title</th><th>Body</th><th></th></tr>
  </thead>
  <tbody>
    <% @books.each do |book|%>
    <tr>
      <td><%= book.title%></td>
      <td><%= book.body%></td>
      <td>
      <%=link_to "show",book_path(book.id)%>
      <%=link_to "edit",edit_book_path(book.id)%>
      <%=link_to "destroy",book_path(book.id),method: :delete, "data-confirm"=>"削除しますか？"%>
      </td>
      </tr>
    <%end%>
  </tbody>
</table>

<h1>New book</h1>
<%= form_with model:@book, local:true do |f|%>

<% if @book.errors.any? %>
  <%="error!"%>
<ul>
  <% @book.errors.full_messages.each do|message|%>
  <li><%= message%></li>
  <%end%>
</ul>
<%end%>


<p>Title</p>
<%= f.text_field :title%>
<p>Body</p>
<%= f.text_area :body%>
<%= f.submit "Create Book"%>
<%end%>
